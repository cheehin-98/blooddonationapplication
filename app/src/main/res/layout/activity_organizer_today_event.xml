<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".ui.organization_activity.OrganizerUpdateEventActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">


            <ImageView
                android:id="@+id/event_imaget"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_upload_image" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputEventTitlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEventTitlet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/eventTitle"
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputEventNumOfParticipatet"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEventNumOfParticipatet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/eventNumOfParticipate"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputEventPointt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEventPointt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/eventPoint"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputEventFromDatet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEventFromDatet"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="@string/eventFromDate"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputEventToDatet"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEventToDatet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="@string/eventToDate"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputEventFromTimet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEventFromTimet"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="@string/eventFromTime"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputEventToTimet"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:enabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEventToTimet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="@string/eventToTime"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputEventAddresst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:enabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEventAddresst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/eventAddress"
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputEventVenuet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:enabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEventVenuet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/eventVenue"
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputEventDescriptiont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:enabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEventDescriptiont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/eventDescription"
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnGenerateAttendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_gravity="center"
                    android:text="@string/btnGenerateAttendance"
                    android:background="@color/btnColorRed"
                    android:textColor="@color/textColor">
                </Button>

        </LinearLayout>
    </LinearLayout>
</ScrollView>