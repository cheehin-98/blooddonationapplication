<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <TextView
        android:id="@+id/text_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_clear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_cancel_black_60dp" />

    <ImageView
        android:id="@+id/image_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="171dp"
        android:layout_marginLeft="179dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="179dp"
        android:layout_marginRight="179dp"
        app:srcCompat="@drawable/ic_account_circle_black_60dp" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/image_account"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="160dp"
        android:background="#fff"
        android:fontFamily="@font/roboto"
        android:text="Upload"
        android:textColor="#44a6c6"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUpload"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="123dp"
        android:layout_marginRight="123dp"
        android:entries="@array/user_account"
        android:prompt="@string/user_type"/>

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textUserType"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:layout_toStartOf="@+id/editUsername"
        android:layout_toLeftOf="@+id/editUsername"
        android:fontFamily="@font/roboto"
        android:text="Username"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textUsername"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:layout_toStartOf="@+id/editEmail"
        android:layout_toLeftOf="@+id/editEmail"
        android:fontFamily="@font/roboto"
        android:text="Email"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUsername"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEmail"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:layout_toStartOf="@+id/editPassword"
        android:layout_toLeftOf="@+id/editPassword"
        android:fontFamily="@font/roboto"
        android:text="Password"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEmail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textconfirmPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPassword"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toStartOf="@+id/editconfirmPass"
        android:layout_toLeftOf="@+id/editconfirmPass"
        android:fontFamily="@font/roboto"
        android:text="Confirm Password"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editconfirmPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="166dp"
        android:layout_marginLeft="166dp"
        android:layout_marginEnd="157dp"
        android:layout_marginRight="157dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorAccent"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUpload"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_toStartOf="@+id/spinnerUser"
        android:layout_toLeftOf="@+id/spinnerUser"
        android:fontFamily="@font/roboto"
        android:text="User Type:"
        android:textAlignment="center"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerUser"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName" />


</RelativeLayout>